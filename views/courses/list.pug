extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/courses/add", class="btn btn-info my-10 float-right") Add New Course
    table.table
        thead
            tr
                th(style="text-align:center") Course Name
                th(style="text-align:center") Course ID
                th(style="text-align:center") Course Duration
                th(style="text-align:center") Course Fee
                th(style="text-align:center") Actions
        tbody
            each course in courses
                tr
                    td(style="text-align:center")=course.name
                    td(style="text-align:center")=course.id
                    td(style="text-align:center")=course.duration
                    td(style="text-align:center")=course.fee
                    td(style="text-align:center")
                        a(href="/courses/delete/"+course._id, class="btn faas btn-danger") Delete /
                        a(href="/courses/edit/"+course._id, class="btn  faas btn-success") Edit