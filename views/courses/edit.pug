extends ../layout

block content
    h1 Edit Course
    form(action="/courses/edit/"+course._id,method="post")
        .form-group
            label(for="name") Course Name
            input#name(type="text", class="form-control", name="name" ,value=course.name)
        .form-group
            label(for="id") Course ID
            input#id(type="text", class="form-control", name="id",value=course.id)
        .form-group
            label(for="duration") Course Duration
            input#duration(type="text", class="form-control", name="duration",value=course.duration)
        .form-group
            label(for="fee") Course Fee
            input#fee(type="number", class="form-control", name="fee",value=course.fee)
        input(type="submit", class="btn btn-info")
    